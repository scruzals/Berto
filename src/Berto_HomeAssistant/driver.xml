  			   <name>Restart MQTT</name>
  			   <command>RESTART_MQTT</command>
  		   </action>
		   <action>
			   <name>Publish Home Assistant Configuration</name>
			   <command>PUBLISH_HA</command>
		   </action>
  	   </actions>
