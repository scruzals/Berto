<devicedata>
	<manufacturer>Berto Ltd</manufacturer>
	<creator>David Massot</creator>
	<name>Berto MQTT Bridge</name>
	<version>7</version>
	<small image_source="c4z">icons/device_sm.png</small>
	<large image_source="c4z">icons/device_lg.png</large>
	<control>lua_gen</control>
	<controlmethod>other</controlmethod>
	<driver>DriverWorks</driver>
	<copyright>Copyright 2004-2017 Berto Ltd.  All rights reserved.</copyright>
	<created>10/10/2018 8:49 PM</created>
	<modified>10/10/2018 8:50 PM</modified>
    <proxy proxybindingid="5000" name="MQTT Bridge" primary="True" image_source="c4z" large_image="icons/device_lg.png" small_image="icons/device_sm.png">Berto_MQTTBridge</proxy>
	<config>
		<script file="squish.lua" encryption="2" />
		<documentation file = "README.html">https://github.com/davidmassot/Berto</documentation>
	    <properties>
  	      <property>
  	        <name>Client Id</name>
  	        <type>STRING</type>
  	        <readonly>false</readonly>
  	        <default />
  	      </property>
		  <property>
			  <name>Quality Of Service</name>
			  <type>RANGED_INTEGER</type>
			  <minimum>0</minimum>
			  <maximum>2</maximum>
			  <default>0</default>
			  <readonly>false</readonly>
		  </property>
	      <property>
	        <name>Server</name>
	        <type>STRING</type>
	        <readonly>false</readonly>
	        <default />
	      </property>
	      <property>
	        <name>Username</name>
	        <type>STRING</type>
	        <readonly>false</readonly>
	        <default />
	      </property>
	  	  <property>
			  <name>Password</name>
	  		  <type>STRING</type>
	  		  <default></default>
	  		  <password>true</password>
	  	  </property>
	      <property>
	        <name>Topics</name>
	        <type>STRING</type>
	        <readonly>false</readonly>
	        <default />
	      </property>
		  <property>
			  <name>Maximum Message Size (MB)</name>
			  <type>RANGED_INTEGER</type>
			  <minimum>1</minimum>
			  <maximum>256</maximum>
			  <default>1</default>
			  <readonly>false</readonly>
		  </property>
	      <property>
	        <name>Last Update</name>
	        <type>STRING</type>
	        <readonly>true</readonly>
	        <default />
	      </property>
	      <property>
	        <name>Last Message</name>
	        <type>STRING</type>
	        <readonly>true</readonly>
	        <default />
	      </property>
		  <property>
			  <name>Driver Managament</name>
			  <type>LABEL</type>
			  <default>Driver Management</default>
		  </property>
	      <property>
	        <name>Version</name>
	        <type>STRING</type>
	        <readonly>true</readonly>
	        <default />
	      </property>
	      <property>
	        <name>Auto Update</name>
	        <type>LIST</type>
	        <readonly>false</readonly>
	        <default>Off</default>
	        <items>
	          <item>On</item>
	          <item>Off</item>
			  <item>Force</item>
	        </items>
	      </property>
	      <property>
	        <name>Debug Mode</name>
	        <type>LIST</type>
	        <readonly>false</readonly>
	        <default>Off</default>
	        <items>
	          <item>On</item>
	          <item>Off</item>
	        </items>
	      </property>
	    </properties>
  	   <actions>
  		   <action>
  			   <name>Restart MQTT</name>
  			   <command>RESTART_MQTT</command>
  		   </action>
  	   </actions>
		<commands>
			<command>
				<name>Publish Message</name>
				<description>Publishing PARAM2 To PARAM1</description>
				<params>
					<param>
						<name>Topic</name>
						<type>STRING</type>
						<default></default>
					</param>
					<param>
						<name>Message</name>
						<type>STRING</type>
						<default></default>
					</param>
				</params>
			</command>
			<command>
				<name>Restart MQTT</name>
				<description>Restart MQTT</description>
			</command>
		</commands>
	</config>
    <connections>
      <connection>
        <id>1</id>
        <facing>1</facing>
        <connectionname>MQTT Devices</connectionname>
        <type>1</type>
        <consumer>False</consumer>
        <audiosource>False</audiosource>
        <videosource>False</videosource>
        <linelevel>True</linelevel>
        <classes>
          <class>
            <classname>MQTT_LINK</classname>
            <autobind>True</autobind>
          </class>
        </classes>
      </connection>
      <connection>
        <id>5000</id>
        <connectionname>Berto_MQTTBridge</connectionname>
        <facing>6</facing>
        <type>2</type>
        <consumer>false</consumer>
        <audiosource>false</audiosource>
        <videosource>false</videosource>
        <linelevel>false</linelevel>
        <classes>
          <class>
            <classname>Berto_MQTTBridge</classname>
          </class>
        </classes>
      </connection>
    </connections>
</devicedata>
