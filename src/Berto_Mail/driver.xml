<devicedata>
	<manufacturer>Berto Ltd</manufacturer>
	<creator>David Massot</creator>
	<name>Berto Mail</name>
	<version>1</version>
	<small image_source="c4z">icons/device_sm.png</small>
	<large image_source="c4z">icons/device_lg.png</large>
	<control>lua_gen</control>
	<controlmethod>other</controlmethod>
	<driver>DriverWorks</driver>
	<copyright>Copyright 2004-2017 Berto Ltd.  All rights reserved.</copyright>
	<created>02/07/2017 8:49 PM</created>
	<modified>02/07/2017 8:50 PM</modified>
    <proxy proxybindingid="5000" name="Mail" primary="True" image_source="c4z" large_image="icons/device_lg.png" small_image="icons/device_sm.png">Berto_Mail</proxy>
	<config>
		<script file="squish.lua" encryption="2" />
		<documentation file = "README.html">https://github.com/davidmassot/Berto</documentation>
	    <properties>
  	      <property>
  	        <name>Mail Server</name>
  	        <type>STRING</type>
  	        <readonly>false</readonly>
  	        <default>smtp.gmail.com</default>
  	      </property>
	      <property>
	        <name>Port</name>
			<type>RANGED_INTEGER</type>
			<minimum>1</minimum>
			<maximum>65535</maximum>
			<default>465</default>
			<readonly>false</readonly>
	      </property>
	  	  <property>
	  		  <name>Username</name>
	  		  <type>STRING</type>
	  		  <default></default>
	  	  </property>
	  	  <property>
	  		  <name>Password</name>
	  		  <type>STRING</type>
	  		  <default></default>
	  		  <password>true</password>
		  </property>
	  	  <property>
	  		  <name>Email Name</name>
	  		  <type>STRING</type>
	  		  <default></default>
	  	  </property>
	  	  <property>
	  		  <name>Email Address</name>
	  		  <type>STRING</type>
	  		  <default></default>
	  	  </property>
	      <property>
	        <name>Status</name>
	        <type>STRING</type>
	        <readonly>true</readonly>
	        <default />
	      </property>
		  <property>
			  <name>Driver Managament</name>
			  <type>LABEL</type>
			  <default>Driver Management</default>
		  </property>
		  <property>
			  <name>Version</name>
			  <type>STRING</type>
			  <readonly>true</readonly>
			  <default />
		  </property>
		  <property>
			  <name>Auto Update</name>
			  <type>LIST</type>
			  <readonly>false</readonly>
			  <default>Off</default>
			  <items>
				  <item>On</item>
				  <item>Off</item>
				  <item>Force</item>
			  </items>
		  </property>
		  <property>
			  <name>Debug Mode</name>
			  <type>LIST</type>
			  <readonly>false</readonly>
			  <default>Off</default>
			  <items>
				  <item>On</item>
				  <item>Off</item>
			  </items>
		  </property>
	  </properties>
	<actions>
		<action>
			<name>Test Email</name>
			<command>TEST_EMAIL</command>
		</action>
	</actions>
	  <commands>
		  <command>
			  <name>SEND_MAIL</name>
			  <description>Sending Mail To PARAM1</description>
			  <params>
				  <param>
					  <name>To</name>
					  <type>STRING</type>
					  <default></default>
				  </param>
				  <param>
					  <name>Cc</name>
					  <type>STRING</type>
					  <default></default>
				  </param>
				  <param>
					  <name>Bcc</name>
					  <type>STRING</type>
					  <default></default>
				  </param>
				  <param>
					  <name>Subject</name>
					  <type>STRING</type>
					  <default></default>
				  </param>
				  <param>
					  <name>Message</name>
					  <type>STRING</type>
					  <default></default>
				  </param>
			  </params>
		  </command>
	  </commands>
	</config>
	<connections>
		<connection>
			<id>5000</id>
			<connectionname>Berto_Mail</connectionname>
			<facing>6</facing>
			<type>2</type>
			<consumer>false</consumer>
			<audiosource>false</audiosource>
			<videosource>false</videosource>
			<linelevel>false</linelevel>
			<classes>
				<class>
					<classname>Berto_Mail</classname>
				</class>
			</classes>
		</connection>  
	</connections>
</devicedata>
